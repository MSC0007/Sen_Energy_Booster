<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        
      
        
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    <!--   <item name="android:windowAnimationStyle">@style/Anim_Activite_Perso</item>  -->   
        
    </style>
    
    
    
    <style name="Anim_Activite_Perso" parent="android:style/Animation.Activity">  
        
		    <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>  
		    <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item> 
		    <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item> 
		    <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>   
    
    </style>
    
    
    <!-- Style pour les boutons Bluetooth -->
     <style name="bouton_bluetooth" >  
        
		    <item name="android:textColor">#FFFFFF</item>  
		    <item name="android:textSize">20sp</item> 
		    <item name="android:background">#387dc5</item>  
    
    </style>
    

</resources>
